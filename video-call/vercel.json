{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }, // Handle API routes
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" }, // Route API requests
    { "src": "/(.*)", "dest": "/index.html" } // Route all other requests to index.html
  ]
}
